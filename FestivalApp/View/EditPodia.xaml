<Window x:Class="FestivalApp.View.EditPodia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wijzig Podium" Height="200" Width="300" ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbNaam" Content="Naam " VerticalAlignment="Center"/>
        <TextBox x:Name="txtNaam" Margin="5,8" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <Button x:Name="btnWijzigen" Content="Wijzigen" Margin="5,8" Grid.Row="2" Click="btnWijzigen_Click"/>
    </Grid>
</Window>
