<Window x:Class="FestivalApp.View.NieuwPodia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuw Podium" Height="200" Width="300" ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbNaam" Content="Naam " VerticalAlignment="Center"/>
        <TextBox x:Name="txtNaam" Text="{Binding NewStageName}" Margin="5,8" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <Button x:Name="btnToevoegen" Command="{Binding NewStageCommand}" Content="Toevoegen" Margin="5,8" Grid.Row="2" Click="btnToevoegen_Click"/>
    </Grid>
</Window>
