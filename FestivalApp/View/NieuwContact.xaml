<Window x:Class="FestivalApp.View.NieuwContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuw Contact" Height="350" Width="300" ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label x:Name="lbNaam" Content="Naam " VerticalAlignment="Center"/>
        <TextBox x:Name="txtNaam" Margin="5,8" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <Label x:Name="lbFunctie" Content="Functie" Grid.Row="2" VerticalAlignment="Center"/>
        <ComboBox x:Name="cboFuncties" Margin="5,8" Grid.Row="3" VerticalContentAlignment="Center"/>
        <Label x:Name="lbTelNummer" Content="Telefoonnummer " Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTelNummer" Margin="5,8" Grid.Row="5" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <Button x:Name="btnToevoegen" Content="Toevoegen" Margin="5,8" Grid.Row="6"/>
    </Grid>
</Window>
